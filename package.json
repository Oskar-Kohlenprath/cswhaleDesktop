{
  "name": "cswhale-desktop",
  "version": "1.0.1",
  "description": "cswhale storage unit Verification Tool",
  "main": "main.js",
  "homepage": "https://cswhale.com",
  "author": "cswhale.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Oskar-Kohlenprath/cswhaleDesktop.git"
  },
  "scripts": {
    "start": "electron .",
    "generate-icons": "electron-icon-builder --input=./icon-source.png --output=./static/images --flatten",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "publish": "electron-builder --publish=always",
    "clean-keytar-dev": "node delete-keytar.js cs-assets-service-dev",
    "clean-keytar-prod": "node delete-keytar.js cs-assets-service"
  },
  "keywords": [
    "cswhale",
    "csgo",
    "inventory",
    "verification"
  ],
  "license": "ISC",
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.1.0",
    "fs": "0.0.1-security",
    "globaloffensive": "^3.2.0",
    "jwt-decode": "^3.1.2",
    "keytar": "^7.9.0",
    "steam-user": "^5.2.0",
    "steamcommunity": "^3.48.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^33.0.2",
    "electron-builder": "^24.0.0",
    "electron-icon-builder": "^2.0.1"
  },
  "build": {
    "appId": "com.cswhale.inventory-verifier",
    "productName": "cswhale Inventory Verifier",
    "copyright": "Copyright Â© 2024 cswhale",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "styles.css",
      "index.html",
      "static/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!dist/**/*",
      "!.git/**/*",
      "!.gitignore",
      "!build-and-upload.js",
      "!delete-keytar.js"
    ],
    "extraResources": [
      {
        "from": "static/",
        "to": "static/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "static/images/icons/icon.ico",
      "publisherName": "cswhale"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "static/images/icons/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "static/images/icons/icon.png",
      "category": "Utility",
      "desktop": {
        "Name": "cswhale",
        "Comment": "Scan CS:GO storage units",
        "Categories": "Utility;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "Oskar-Kohlenprath",
      "repo": "cswhaleDesktop",
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "releaseInfo": {
      "releaseNotes": "Bug fixes and performance improvements"
    }
  }
}
